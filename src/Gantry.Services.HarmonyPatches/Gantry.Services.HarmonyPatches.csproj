	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="VintageStory.Gantry.Core" Version="0.3.0" />
	</ItemGroup>

	<ItemGroup Condition="'$(Configuration)' == 'Debug'">
		<ProjectReference Include="..\Gantry.Core\Gantry.Core.csproj" />
	</ItemGroup>

</Project>
